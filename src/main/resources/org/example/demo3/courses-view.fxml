<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="content" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gradeapp.controller.CoursesController">
   <Label text="Add a new course">
      <font>
         <Font size="18.0" />
      </font>
      <padding>
         <Insets bottom="10.0" />
      </padding>
   </Label>
   <HBox alignment="CENTER_LEFT" prefHeight="16.0" prefWidth="519.0" spacing="10.0" styleClass="section-style" HBox.hgrow="ALWAYS">
      <children>
         <Label text="Add new Course">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
         <Button mnemonicParsing="false" onMouseClicked="#handleAddCourseButtonAction" text="+ Add Course" />
      </children>
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </HBox>
   <Label text="Current courses">
      <font>
         <Font size="18.0" />
      </font>
      <VBox.margin>
         <Insets bottom="10.0" top="20.0" />
      </VBox.margin>
   </Label>
   <VBox prefHeight="500.0" prefWidth="519.0" styleClass="section-style" VBox.vgrow="ALWAYS">
      <children>
         <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">

            <VBox fx:id="currentCourseContainer" prefHeight="600.0" prefWidth="519.0" />
            <padding>
               <Insets bottom="10.0" top="10.0" />
            </padding>

         </ScrollPane>
      </children>
   </VBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
