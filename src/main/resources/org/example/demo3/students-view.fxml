<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox fx:id="studentsContainer" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gradeapp.controller.StudentController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Students" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Add Student" onAction="#handleAddStudentButtonAction"/>
        <Button text="Import Students" onAction="#handleImportStudentsFromFile"/>
    </HBox>

    <ListView fx:id="studentListView" VBox.vgrow="ALWAYS"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="View Details" onAction="#handleViewDetailsButtonAction"/>
        <Button text="Add Grade" onAction="#handleAddGradeButtonAction"/>
        <Button text="Edit Student" onAction="#handleEditStudentButtonAction"/>
        <Button text="Delete Student" onAction="#handleDeleteStudentButtonAction"/>
    </HBox>

    <VBox fx:id="studentDetailsContainer" visible="false" managed="false">
        <Label text="Student Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <GridPane fx:id="studentDetailsGrid" vgap="5" hgap="5">
        </GridPane>
    </VBox>
</VBox>
