<VBox fx:id="classContainer" prefHeight="509.0" prefWidth="566.0" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gradeapp.controller.ClassController">
   <Label text="Add a new class">
      <font>
         <Font size="18.0" />
      </font>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </Label>

          <HBox alignment="CENTER_LEFT" prefHeight="20.0" prefWidth="566.0" spacing="10.0" styleClass="section-style" HBox.hgrow="ALWAYS">
        <children>
            <Label text="Add a new Class">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <Button mnemonicParsing="false" onMouseClicked="#handleAddClassButtonAction" text="+ Add Class" />
        </children>
      <VBox.margin>
         <Insets bottom="20.0" />
      </VBox.margin>
    </HBox>
      <Label text="Current classes">
          <font>
              <Font size="18.0" />
          </font>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
      </Label>
    <VBox prefHeight="200.0" prefWidth="100.0" styleClass="section-style" VBox.vgrow="ALWAYS">
        <children>
            <VBox fx:id="currentClassContainer" prefHeight="100.0" prefWidth="200.0" />
        </children>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
    </VBox>

    <VBox fx:id="newClassInputContainer" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS" />
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
