<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="classContainer" prefHeight="732.0" prefWidth="765.0" spacing="10" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gradeapp.controller.ClassController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Label text="Classes">
      <font>
         <Font size="18.0" />
      </font></Label>
   <HBox prefHeight="18.0" prefWidth="632.0" spacing="20.0" styleClass="section-style">
      <children>
      
          <HBox alignment="CENTER_LEFT" spacing="10">
              <Label text="Select Course">
               <font>
                  <Font size="16.0" />
               </font></Label>
              <ComboBox fx:id="courseSelector" prefWidth="200.0" />
          </HBox>
      
          <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
              <Button onAction="#handleAddClassButtonAction" text="Add New Class" />
              <Button onAction="#handleAddStudentToClassAction" text="Add Student to Class" />
              <Button onAction="#handleRemoveStudentFromClassAction" styleClass="delete-button" text="Remove Student from Class" />
          </HBox>
      </children>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </HBox>

    <Label text="Current Classes">
      <font>
         <Font size="18.0" />
      </font></Label>
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox fx:id="currentClassContainer" spacing="10" />
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
    </ScrollPane>
    <Label fx:id="classStatisticsLabel" text="Class Statistics">
      <font>
         <Font size="18.0" />
      </font></Label>
    <ListView fx:id="studentListView" prefWidth="745.0" VBox.vgrow="ALWAYS" />

    <VBox fx:id="newClassInputContainer" spacing="10" />
</VBox>
