<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox fx:id="classContainer" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gradeapp.controller.ClassController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Class Management" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Select Course:"/>
        <ComboBox fx:id="courseSelector" prefWidth="200.0"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Add New Class" onAction="#handleAddClassButtonAction"/>
        <Button text="Add Student to Class" onAction="#handleAddStudentToClassAction"/>
        <Button text="Remove Student from Class" onAction="#handleRemoveStudentFromClassAction"/>
    </HBox>

    <Label text="Current Classes" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true">
        <VBox fx:id="currentClassContainer" spacing="10"/>
    </ScrollPane>

    <Label text="Class Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label fx:id="classStatisticsLabel" text="Class Statistics: "/>
    <ListView fx:id="studentListView" VBox.vgrow="ALWAYS"/>

    <VBox fx:id="newClassInputContainer" spacing="10"/>
</VBox>