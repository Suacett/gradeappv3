<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="assessmentCreationContainer" spacing="10" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gradeapp.controller.AssessmentPartsController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Set up parts">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
   <HBox alignment="CENTER_LEFT" prefHeight="13.0" prefWidth="603.0" spacing="10.0">
      <children>
         <Label text="Add parts">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
         <ComboBox fx:id="selectPart" prefWidth="150.0" />
      </children>
   </HBox>
   <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="63.0" prefHeight="13.0" prefWidth="603.0" spacing="10.0">
      <children>
         <Label text="Add criteria">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
         <ComboBox fx:id="selectNumberOfCriteria" prefWidth="150.0" />
      </children>
   </HBox>
   <VBox fx:id="addCriteriaDynamicArea" prefHeight="0.0" prefWidth="603.0" />
   <Separator prefWidth="200.0" />

    <HBox spacing="10">
      <Button layoutX="10.0" layoutY="10.0" onAction="#saveAssessment" text="Save" />
      <Button fx:id="cancelNewAssessment" layoutX="90.0" layoutY="10.0" onAction="#saveAssessment" styleClass="delete-button" text="Cancel" />
    </HBox>
</VBox>
