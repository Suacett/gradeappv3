<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="assessmentContainer" prefHeight="600.0" prefWidth="1000.0"
   xmlns="http://javafx.com/javafx/21"
   xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gradeapp.controller.MarkingController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <Label text="Assessment">
      <font>
         <Font size="18.0" />
      </font>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </Label>
   <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="section-style">
      <Label text="Select a course">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <ComboBox fx:id="courseSelector" prefWidth="200.0" />
      <Label layoutX="10.0" layoutY="13.0" text="Select a class">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <ComboBox fx:id="classSelector" layoutX="123.0" layoutY="10.0" prefWidth="200.0" />
      <Label layoutX="333.0" layoutY="13.0" text="Select assessment">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <ComboBox fx:id="assessmentSelector" layoutX="446.0" layoutY="10.0" prefWidth="200.0" />
      <Button fx:id="openRubric" mnemonicParsing="false" text="Open rubric" />
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </HBox>
   <Label layoutX="20.0" layoutY="108.0" text="Students">
      <font>
         <Font size="18.0" />
      </font>
      <VBox.margin>
         <Insets bottom="10.0" top="20.0" />
      </VBox.margin>
   </Label>
   <VBox prefHeight="200.0" prefWidth="100.0" styleClass="section-style">
      <children>
         <HBox fx:id="studentsInClass" alignment="CENTER_LEFT" spacing="10.0" styleClass="section-style" />
      </children>
   </VBox>
</VBox>
