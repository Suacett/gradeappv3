<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="assessmentContainer" prefHeight="600.0" prefWidth="1000.0" spacing="10"
   xmlns="http://javafx.com/javafx/21"
   xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gradeapp.controller.MarkingController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <Label text="Assessment" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

   <HBox spacing="20.0" alignment="CENTER_LEFT" styleClass="section-style">
      <Label text="Select a course">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <ComboBox fx:id="courseSelector" promptText="Select a course" prefWidth="200.0"/>

      <Label text="Select a class">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <ComboBox fx:id="classSelector" promptText="Select a class" prefWidth="200.0"/>

      <Label text="Select assessment">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <ComboBox fx:id="assessmentSelector" promptText="Select assessment" prefWidth="200.0"/>
   </HBox>

   <Label text="Students" style="-fx-font-size: 18px; -fx-font-weight: bold;">
      <VBox.margin>
         <Insets top="20.0" bottom="10.0" />
      </VBox.margin>
   </Label>

   <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
      <VBox fx:id="studentsInClass" spacing="10" styleClass="section-style"/>
   </ScrollPane>
</VBox>