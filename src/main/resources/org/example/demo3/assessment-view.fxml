<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="assessmentContainer" prefHeight="600.0" prefWidth="1000.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gradeapp.controller.AssessmentController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label text="Assessments">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="section-style">
        <Label text="Select a course">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <ComboBox fx:id="courseSelector" prefWidth="200.0" />
        <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
        </VBox.margin>
    </HBox>
    <HBox prefHeight="180.0" prefWidth="980.0" spacing="10" VBox.vgrow="ALWAYS">
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label text="Assessments">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <TableView fx:id="assessmentTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="assessmentNameColumn" prefWidth="195.0" text="Name" />
                    <TableColumn fx:id="assessmentDescriptionColumn" prefWidth="488.0" text="Description" />
                    <TableColumn fx:id="assessmentWeightColumn" prefWidth="90.0" text="Weight" />
                    <TableColumn fx:id="assessmentMaxScoreColumn" prefWidth="109.0" text="Max Score" />
               <TableColumn fx:id="assessmentPreviewColumn" prefWidth="97.0" text="Preview" />
                </columns>
            </TableView>
            <HBox spacing="10">
                <Button onAction="#handleAddAssessmentButtonAction" text="+ Add" />
                <Button onAction="#handleDeleteAssessmentButtonAction" styleClass="delete-button" text="Delete" />
            </HBox>
        </VBox>
    </HBox>
</VBox>
