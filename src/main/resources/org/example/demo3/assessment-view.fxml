<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox fx:id="assessmentContainer" prefHeight="509.0" prefWidth="566.0" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gradeapp.controller.AssessmentController">
    <VBox prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
        <children>
            <Label text="Current assessments">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            <VBox fx:id="currentAssessmentContainer" prefHeight="100.0" prefWidth="200.0" />
        </children>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
    </VBox>
    <Separator prefWidth="200.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
    </Separator>
    <HBox spacing="20">
        <VBox>
            <Label text="Assessments"/>
            <TableView fx:id="assessmentTable"/>
            <Button text="Add Assessment" onAction="#handleAddAssessmentButtonAction"/>
            <Button text="Add Child Assessment" onAction="#handleAddChildAssessmentButtonAction"/>
        </VBox>
        <VBox>
            <Label text="Assessment Parts"/>
            <TableView fx:id="partsTable"/>
            <Button text="Add Part" onAction="#handleAddPartButtonAction"/>
        </VBox>
        <VBox>
            <Label text="Linked Outcomes"/>
            <TableView fx:id="outcomeTable"/>
            <Button text="Link Outcome" onAction="#handleLinkOutcomeButtonAction"/>
        </VBox>
    </HBox>
    <VBox fx:id="outcomeInputContainer" spacing="10">
        <padding>
            <Insets top="20" />
        </padding>
    </VBox>
    <VBox fx:id="newAssessmentInputContainer" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS" />
</VBox>