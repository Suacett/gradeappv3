<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gradeapp.controller.CourseDetailsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Course Details">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <GridPane vgap="10" hgap="10">
    <Label text="Course ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="courseIdField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Course Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="courseNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Course Description:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="courseDescriptionField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    </GridPane>

    <Label text="Course Outcomes">
        <font>
            <Font size="16.0" />
        </font>
    </Label>

    <TableView fx:id="outcomesTable" editable="true" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="identifierColumn" text="Identifier" />
            <TableColumn fx:id="descriptionColumn" text="Description" />
            <TableColumn fx:id="weightColumn" text="Weight" />
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Add Outcome" onAction="#addOutcome" />
        <Button text="Remove Selected Outcome" onAction="#removeSelectedOutcome" />
    </HBox>

    <HBox spacing="10">
        <Button text="Save" onAction="#saveCourseDetails" />
        <Button text="Cancel" onAction="#cancelEditing" />
    </HBox>
</VBox>
